    "posthog-js": "^1.258.6",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "zod": "^3.23.8",
    "zustand": "^5.0.7"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
